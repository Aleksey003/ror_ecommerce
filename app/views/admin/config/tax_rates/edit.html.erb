<%= render :partial => '/admin/config/sub_header'%>

<% display_name = "#{@tax_rate.state.try(:abbreviation)} #{@tax_rate.tax_status.try(:name)}" %>
<h1>Editing <%= "(#{display_name})" if display_name.strip.present? %> Tax Rate</h1>

<%= simple_form_for(@tax_rate, :url => admin_config_tax_rate_path(@tax_rate)) do |f| %>
  <%= render :partial =>  'form', :locals => {:f => f} %>
<% end %>

<%= link_to 'Show', admin_config_tax_rate_path(@tax_rate), :class => 'button' %>
<%= link_to 'Back', admin_config_tax_rates_path, :class => 'button' %>

<% content_for :bottom do -%>
  <%= javascript_include_tag "admin/config_tax_rate" %>

  <script>
    Hadean.Utility.registerOnLoadHandler(Hadean.TaxRateForm.initialize());
  </script>
<% end %>
